  <div id="single-video">
    <div class="vimeo-video">
      <iframe src="//player.vimeo.com/video/{{{id_from_uri uri}}}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen>
      </iframe>
    </div>
    <div id="single-video-info-box" class="row panel">
      <div id="single-video-info-box-text" class="small-12 large-7 columns">
        <h2>{{name}}<h2>
        <p>{{{description}}}</p>
        {{#unless description}}
          <p>No description.</p>
        {{/unless}}
      </div>
    </div>
  </div>
